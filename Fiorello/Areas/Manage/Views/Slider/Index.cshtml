@model List<Slider>
@{ ViewData["Title"] = "Index"; }

<div class="container">
    <div class="mt-2 d-flex" style="justify-content:flex-end">
        <a asp-controller="slider" asp-action="create" class="btn btn-success btn-icon-text">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>
    <table class="mt-3 table table-dark">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Slider Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Subtitle
                </th>
                <th>
                    Signature
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in Model)
            {
<tr>
    <td>
        @slider.Id
    </td>
    <td>
        <img style="width:80px;height:80px;" src="~/assets/images/@slider.SliderImage" alt="slider image" />
    </td>
    <td>
        @slider.Title
    </td>
    @if (slider.Subtitle.Length > 25)
    {
<td>
    @slider.Subtitle.Substring(0, 25)...
</td> }
                else
                {
<td>
    @slider.Subtitle
</td>                }
    <td>
        <img style="width:100px;height:100px;object-fit:contain" src="~/assets/images/@slider.SignatureImage" alt="signature image" />
    </td>
    <td>
        <a asp-controller="slider" asp-action="edit" asp-route-id="@slider.Id" class="btn btn-warning btn-icon-text">
            <i class="mdi mdi-file-check btn-icon-append"></i>
            Edit
        </a>
        <a asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger btn-icon-text delete-item ">
            <i class="mdi mdi-alert btn-icon-prepend "></i>
            Delete
        </a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-item").click(function (e) {
            e.preventDefault()
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        } else {
                            Swal.fire(
                                'Not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }

                    );
                }
            })
        })</script>
}

